{
  "name": "react-hooks",
  "engines": {
    "node": ">=16"
  },
  "scripts": {
    "docgen": "typedoc",
    "doctest": "typedoc --validation.notDocumented --requiredToBeDocumented Function --requiredToBeDocumented Parameter --requiredToBeDocumented TypeParameter --treatValidationWarningsAsErrors --emit none",
    "dev": "vite",
    "test:watch": "vitest",
    "test:coverage": "vitest --coverage",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint-fix": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0 --fix",
    "typecheck": "tsc --noEmit",
    "format": "prettier --write \"./**/*.{ts,tsx,css,md,mdx,json}\"",
    "prepare": "husky install"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.1.3",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.5.1",
    "@types/react": "^18.2.25",
    "@types/react-dom": "^18.2.10",
    "@typescript-eslint/eslint-plugin": "^6.7.4",
    "@typescript-eslint/parser": "^6.7.4",
    "@vitejs/plugin-react-swc": "^3.4.0",
    "@vitest/coverage-v8": "^0.34.6",
    "eslint": "^8.50.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "husky": "^8.0.3",
    "jsdom": "^22.1.0",
    "prettier": "^3.0.3",
    "typedoc": "^0.25.1",
    "typedoc-plugin-coverage": "^2.2.0",
    "typedoc-plugin-missing-exports": "^2.1.0",
    "typescript": "^5.2.2",
    "vite": "^4.4.11",
    "vitest": "^0.34.6"
  }
}
